@model TiminsHospitalProjectV3.Models.ViewModels.ShowEvent

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Event</h4>
    @{
        //Use server rendering to determine an image
        string pic = "/Content/Events/default.jpg";
        string alt = "No Profile Picture Provided.";
        if (Model.Event.EventHasImage)
        {
            pic = "/Content/Events/" + Model.Event.EventId + "." + Model.Event.PicExtension;
            alt = "Picture Of Event ";
        }
    }
    <img src="@pic" alt="@alt" width="200" />
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Event.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Event.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Event.EventHasImage)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Event.EventHasImage)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Event.PicExtension)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Event.PicExtension)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Event.EventDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Event.EventDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Event.EventDisc)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Event.EventDisc)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Event.EventHasOcured)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Event.EventHasOcured)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Event.UserID)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Event.UserID)
        </dd>

    </dl>
</div>
<div>
    <h4>Event Sponsers:</h4>
    <div>
        @foreach (var donation in Model.DonationToEvent)
        {

            @Html.ActionLink(
                     donation.FistName,
                     "Details",
                     "donation",
                     new { id = donation.EventId },
                     new { })
            <br />

        }
    </div>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Event.EventId }) |
    @Html.ActionLink("Back to List", "List")
</p>
