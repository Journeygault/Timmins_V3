@model TiminsHospitalProjectV3.Models.Employee

@{
    ViewBag.Title = "Create";
}
<div class="link">
    @Html.ActionLink("Back to List", "List")
</div>
@using (Html.BeginForm(new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="wrapper">
        <div class="col-md-4 section1">
            <h1 class="title">Job Application</h1>
            <img src="~/Content/Employees/E1.jpg" width="300" />
            <h2 class="title">Get Hired Today</h2>
        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="section2">
            <div class="names">
                <div class="form-group">
                    @*@Html.LabelFor(model => model.EmployeeFirstname, htmlAttributes: new { @class = "control-label col-md-2" })*@
                    <div class="first">
                        <label for="firstname">First Name:</label>
                        @Html.EditorFor(model => model.EmployeeFirstname, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.EmployeeFirstname, "", new { @class = "text-danger", data_valmsg_for = "EmployeeFirstname" })
                    </div>
                </div>

                <div class="form-group">
                    @*@Html.LabelFor(model => model.EmployeeLastname, htmlAttributes: new { @class = "control-label col-md-2" })*@
                    <div class="last">
                        <label for="lastname">Last Name:</label>
                        @Html.EditorFor(model => model.EmployeeLastname, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.EmployeeLastname, "", new { @class = "text-danger", data_valmsg_for = "EmployeeLastname" })
                    </div>
                </div>
            </div>


            <div class="form-group">
                @*@Html.LabelFor(model => model.EmployeePhone, htmlAttributes: new { @class = "control-label col-md-2" })*@
                <div>
                    <label for="phone">Phone:</label>
                    @Html.EditorFor(model => model.EmployeePhone, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.EmployeePhone, "", new { @class = "text-danger", data_valmsg_for = "EmployeePhone" })
                </div>
            </div>

            <div class="form-group">
                @*@Html.LabelFor(model => model.EmployeeEmail, htmlAttributes: new { @class = "control-label col-md-2" })*@
                <div>
                    <label for="email">Email:</label>
                    @Html.EditorFor(model => model.EmployeeEmail, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.EmployeeEmail, "", new { @class = "text-danger", data_valmsg_for = "EmployeeEmail"})
                </div>
            </div>

            <div class="form-group">
                @*@Html.LabelFor(model => model.EmployeeAddress, htmlAttributes: new { @class = "control-label col-md-2" })*@
                <div>
                    <label for="address">Address:</label>
                    @Html.EditorFor(model => model.EmployeeAddress, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.EmployeeAddress, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @*@Html.LabelFor(model => model.EmployeeResume, htmlAttributes: new { @class = "control-label col-md-2" })*@
                <div>
                    <label for="resume">Resume:</label>
                    @Html.EditorFor(model => model.EmployeeResume, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.EmployeeResume, "", new { @class = "text-danger" })
                </div>
            </div>
            @*<div>
                    <label for="EmployeePic">Resume</label><input type="file" name="EmployeePic" />
                </div>*@
            <div class="form-group">
                @*@Html.LabelFor(model => model.JobID, htmlAttributes: new { @class = "control-label col-md-2" })*@
                <div>
                    <label for="job">Job Id:</label>
                    @Html.EditorFor(model => model.JobID, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.JobID, "", new { @class = "text-danger" })
                   
                </div>
            </div>
        </div>
        <div class="section3">
            <div class="form-group">
                @*@Html.LabelFor(model => model.EmployeeDes, htmlAttributes: new { @class = "control-label col-md-2" })*@
                <div>
                    <label for="des">Description about yourself:</label>
                    @Html.TextAreaFor(model => model.EmployeeDes, new { htmlAttributes = new { @class = "form-control" } })
                   
                    @Html.ValidationMessageFor(model => model.EmployeeDes, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Submit" class="btn btn-default button" />
        </div>
    </div>

}




