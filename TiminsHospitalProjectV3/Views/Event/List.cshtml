@model TiminsHospitalProjectV3.Models.ViewModels.ListEvents

@{
    ViewBag.Title = "List";
}

<h2>Upcoming Events</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Title
        </th>
        <th>
            EventHasImage
        </th>
        <th>
            PicExtension
        </th>
        <th>
            EventDate
        </th>
        <th>
            EventDisc
        </th>
        <th>
            EventHasOcured
        </th>
        <th>
            UserID
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.events)
    {
        if (item.EventHasOcured != true)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EventHasImage)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PicExtension)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EventDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EventDisc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EventHasOcured)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserID)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.EventId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.EventId }) |
                    @Html.ActionLink("Delete", "DeleteConfirm", new { id = item.EventId })
                </td>
            </tr>
        }
    }
</table>
<!--if (Model.isadmin)-->

<h2>Past Events</h2>
<table class="table">
    <tr>
        <th>
            Title
        </th>
        <th>
            EventHasImage
        </th>
        <th>
            PicExtension
        </th>
        <th>
            EventDate
        </th>
        <th>
            EventDisc
        </th>
        <th>
            EventHasOcured
        </th>
        <th>
            UserID
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.events)
    {
        if (item.EventHasOcured == true)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EventHasImage)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PicExtension)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EventDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EventDisc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EventHasOcured)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserID)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.EventId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.EventId }) |
                    @Html.ActionLink("Delete", "DeleteConfirm", new { id = item.EventId })
                </td>
            </tr>
        }
    }

</table>
}

