@model TiminsHospitalProjectV3.Models.ViewModels.UpdateDonation
@Styles.Render("~/Content/Faq_Category/Donations.css")
@{
    ViewBag.Title = "Create";
}

<h2 class="middle">Make A Donation</h2>
<p class="middle">I want to help save more lives.</p>

@using (Html.BeginForm(new { @id = "donationForm", @name = "donationForm" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <div class="middle">
            <p class="asterisk">All fileds with &#42; must be filled to submit.</p>
            <p class="pre-line">
                Your contribution and support enables Timmins and District Hosptial to
                provide high-quality patient care, purchase the mose advanced
                equipment and fund leading-edge research and innovation.
            </p>
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <!--Amount-->
        <div class="form-group">
            @Html.LabelFor(model => model.Donation.Amount, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Donation.Amount, new { htmlAttributes = new { @class = "form-control" } })
                <span class="asterisk">&#42;</span>
                @Html.ValidationMessageFor(model => model.Donation.Amount, "", new { @class = "text-danger", @id = "firstNameError" })
            </div>
        </div>

        @if (!User.IsInRole("Admin"))
        {
            <!--First Name-->
            <div class="form-group">
                @Html.LabelFor(model => model.Donation.FistName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Donation.FistName, new { htmlAttributes = new { @class = "form-control" } })
                    <span class="asterisk">&#42;</span>
                    @Html.ValidationMessageFor(model => model.Donation.FistName, "", new { @class = "text-danger" })
                </div>
            </div>
            <script>

            </script>
            <!--Last Name-->
            <div class="form-group">
                @Html.LabelFor(model => model.Donation.LastName, htmlAttributes: new { @class = "control-label col-md-2" })
