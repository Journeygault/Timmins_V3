        </div>
        <!--Event-->
        <div class="form-group">
            @Html.LabelFor(model => model.Donation.EventId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select name="CategoryID">
                    @foreach (var Event in Model.Allevents)
                    {
                        <option value="@Event.EventId">@Event.Title</option>
                    }
                </select>
                <span class="asterisk">&#42;</span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
