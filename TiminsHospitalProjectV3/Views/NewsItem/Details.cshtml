@model TiminsHospitalProjectV3.Models.ViewModels.ShowNewsItem

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>
@{
    //Use server rendering to determine an image
    string pic = "/Content/NewsItems/default.jpg";
    string alt = "No Profile Picture Provided.";
    if (Model.newsItem.NewsItemHasPic)
    {
        pic = "/Content/NewsItems/" + Model.newsItem.NewsItemID + "." + Model.newsItem.NewsItemPicExtension;
        alt = "Picture Of Event ";
    }
}
<div>
    <h4>NewsItem</h4>
    <img src="@pic" alt="@alt" width="200" />
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.newsItem.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.newsItem.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.newsItem.NewsBody)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.newsItem.NewsBody)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.newsItem.NewItemDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.newsItem.NewItemDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.newsItem.NewsItemHasPic)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.newsItem.NewsItemHasPic)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.newsItem.NewsItemPicExtension)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.newsItem.NewsItemPicExtension)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.newsItem.UserID)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.newsItem.UserID)
        </dd>

    </dl>
</div>
