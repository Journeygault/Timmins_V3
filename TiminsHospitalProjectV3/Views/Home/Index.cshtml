@{
    ViewBag.Title = "Home Page";
}

<div class="emergency-button">
    <button><h4>Emergency</h4><span>+</span></button>
</div>
<div class="index-image"></div>
<div class="tab-icon-links">
    <a href="@Url.Action("Index", "Home")" class="tab-icon">
        <i class="fa fa-info-circle"></i><br /><p>Visitor Information</p>
    </a>
    @if (User.IsInRole("Admin"))
     {
        <a href="@Url.Action("List", "Donation")" class="tab-icon">
            <i class="fa fa-hand-holding-usd"></i><br /><p>Make A Donation</p>
        </a>
     } 
    else 
    {
        <a href="@Url.Action("Create", "Donation")" class="tab-icon">
            <i class="fa fa-hand-holding-usd"></i><br /><p>Make A Donation</p>
        </a>
    }
    <a href="@Url.Action("Index", "Home")" class="tab-icon">
        <i class="fa fa-stethoscope"></i><br/><p>Our Doctors</p>
    </a>
    <a href="@Url.Action("Index", "Home")" class="tab-icon">
        <i class="fa fa-phone-square"></i><br /><p>Contact A Patient</p>
    </a>
    <a href="@Url.Action("Index", "Home")" class="tab-icon">
        <i class="fa fa-calendar-alt"></i><br /><p>Hospital Hours</p>
    </a>
    <a href="@Url.Action("Index", "Home")" class="tab-icon">
        <i class="fa fa-file-invoice-dollar"></i><br /><p>Pay My Bill</p>
    </a>
    <a href="@Url.Action("List", "Faq")" class="tab-icon">
        <i class="fa fa-question"></i><br /><p>FAQs</p>
    </a>
</div>

